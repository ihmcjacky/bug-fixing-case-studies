# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Configuration
REACT_APP_UI_DISPLAY_VER=dev
REACT_APP_COMPANY_NAME=YOUR_COMPANY_NAME
REACT_APP_PRODUCT_NAME=Generic Node Manager
REACT_APP_SHORT_NAME=G-NM

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000
REACT_APP_WS_SERVER_URL=ws://localhost:3001

# Build Configuration
GENERATE_SOURCEMAP=false
NODE_OPTIONS=--openssl-legacy-provider

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_DATA=false

# Repository Configuration (for dependencies)
REACT_APP_SIMPLETABS_REPO=https://github.com/YOUR_ORGANIZATION/react-simpletabs.git

# Security Configuration
REACT_APP_CSRF_TOKEN_NAME=csrftoken
REACT_APP_SESSION_TIMEOUT=3600000

# Feature Flags
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_LOGGING=true
